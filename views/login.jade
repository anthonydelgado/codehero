extends layout

block content
  .container
    .row

      .col.s12.m6
        h3.center Login
        br
        form(role='form', action="/login",method="post",autocomplete="off" )
          .input-field
              input(type='text', name="username", placeholder='Enter Email',autocomplete="off", value="")
          .input-field
            input(type='password', name="password", placeholder='Password',autocomplete="off", value="")
          button.btn.blue-grey.darken-4(type='submit') Login

      .col.s12.m6
        h3.center Signup
        br
        form(role='form', action="/register",method="post",autocomplete="off" )
          .input-field
            input(type='text', name="username", placeholder='Enter Rutgers Email',autocomplete="off", value="")
          .input-field
            input(type='text', name="phone", placeholder='Enter Phone Number',autocomplete="off", value="")
          .input-field
            input(type='password', name="password", placeholder='Password', autocomplete="off",value="")

          h5 Do you want to teach others to code?
          .switch
            label
              No
              input.form-control(type='checkbox', name="mentor")
              span.lever
              Yes
          br
          button.btn.blue-grey.darken-4(type='submit') Signup
